@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Yeni Kategori</h1>
<br />

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(p => p.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.CategoryName,"" ,new { @style = "color:red" })
        <br />
        <br />
        @Html.Label("Kategori Açıklama")
        @Html.TextAreaFor(p => p.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.CategoryDescription,"" ,new { @style = "color:red" })
        <br />
        <br />
        <button class="btn btn-primary">KAYDET</button>
    </div>
}

