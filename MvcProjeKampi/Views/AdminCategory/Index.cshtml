@using EntityLayer.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategori Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>KATEGORİ AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>BAŞLIKLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">SİL</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-primary">GÜNCELLE</a></td>
            <td><a href="" class="btn btn-warning">BAŞLIKLAR</a></td>
        </tr>
    }


</table>
<a href="/AdminCategory/AddCategory" class="btn btn-outline-primary">YENİ KATEGORİ</a>